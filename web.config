<configuration>
	<system.web>
		<authentication mode="Forms">
			<forms loginUrl="~/Security/Login" timeout="30"/>
		</authentication>
		<authorization>
			<deny users="*"/>
		</authorization>
	</system.web>
	<location path="~/Security/_register.cshtml">
		<system.web>
			<authorization>
				<allow users="*"/>
			</authorization>
		</system.web>
	</location>
	<location path="~/Security/_login.cshtml">
		<system.web>
			<authorization>
				<allow users="*"/>
			</authorization>
		</system.web>
	</location>
</configuration>