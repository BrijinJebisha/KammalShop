<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KammalKada</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KammalKada.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/KammalKada.css" asp-append-version="true"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="marqueeDiv">
            <marquee>Free Delivery for selected items...</marquee>
        </div>
        <nav id="nav" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">@* bg-white *@
            <div id="nav" class="container-fluid">
                <button class="navbar-toggler" style="border-color:white;background-color:#76484D" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <img src="~/Images/menu.svg" role="button" style="width:30px;height:30px" alt="Menu" />
                    @* <span class="navbar-toggler-icon" style="color:white !important;"></span> *@
                </button>
                <a class="navbar-brand header__logo" style="font-family:Mistral;font-size:40px;color:white;margin-left:20px;" asp-area="" asp-controller="Home" asp-action="Index">Kammal Kada</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-item-text text-dark" asp-area="" asp-controller="Home" asp-action="Index">Crazy Deals</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-item-text text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">
                                Clearance Sale 🔥
                            </a>
                        </li>
                        <li class="dropdown ">
                            <a class="dropdown-toggle nav-item-text" href="#" id="earringsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Earrings
                            </a>
                            <ul class="dropdown-menu dropdown-style" aria-labelledby="earringsDropdown" id="dropdownlist">
                                <li><a class="dropdown-item items" asp-area="" asp-controller="Home" asp-action="Studs">Studs</a></li>
                                <li><a class="dropdown-item items" asp-area="" asp-controller="Home" asp-action="Jhumka">Jhumka</a></li>
                                <li><a class="dropdown-item items" asp-area="" asp-controller="Home" asp-action="Danglers">Danglers</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-item-text text-dark" asp-area="" asp-controller="Home" asp-action="Index">Rings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-item-text text-dark" asp-area="" asp-controller="Home" asp-action="Index">Bracelet</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-item-text text-dark" asp-area="" asp-controller="Home" asp-action="Index">Accessories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-item-text text-dark" asp-area="" asp-controller="Home" asp-action="Index">New Arrivals</a>
                        </li>
                    </ul>
                </div>
                <div class="d-flex" >
                    <ul class="navbar-nav flex-grow-1" style="display:flex;flex-direction:row; margin:auto">
                        <li class="nav-item" style="margin-right:20px;">
                            <a asp-controller="Home" asp-action="Cart">
                                <img src="~/Images/Cart.svg" role="button" style="width:40px;height:40px" alt="Cart" />
                            </a>
                        </li>
                        <li class="nav-item">
                            @if(User.Identity.IsAuthenticated)
                            {
                                <span class="navbar-text me-2" style="color:white;font-size:30px; cursor:pointer;">Brijin!</span>
                                @* <a id="login" class="navbar-text me-2">
                                    <img src="~/Images/User.svg" role="button" style="width:40px;height:40px" alt="User" />
                                </a> *@
                            }
                            else
                            {
                                <a id="login">
                                    <img src="~/Images/User.svg" role="button" style="width:40px;height:40px" alt="User" />
                                </a>
                            }
                            
                            @* <a class="nav-item-text text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Login</a> *@
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" id="container-all">
        @* <div id="modal">
            <button id="close">close</button>
            Hi How Are You?
        </div> *@
        @* <div id="modal" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%;
                background:rgba(0,0,0,0.5); justify-content:center; align-items:center; z-index:1000;">

            <div id="popupBox" style="background:#fff; padding:20px; border-radius:10px; width:300px; text-align:center; position:relative;">
                <h3>Popup Title</h3>
                <p>This is a simple popup message.</p>
                <button id="close" style="margin-top:10px;">Close</button>
            </div>
        </div> *@
        <div id="modal" style="display:none; position:fixed; top:130px; right:20px;
            width:auto; height:auto; background:none; z-index:1000;border-color:#5E3A3F;border-style:solid;border-radius:10px;">

            <div id="popupBox" style="background:#CCAEB1; padding:10px; border-radius:10px;
                width:100%; height:auto; text-align:center; position:relative; box-shadow:0 4px 10px rgba(0,0,0,0.3);">
                <div id="close" style="display:flex;justify-self:end; align-items:center; color:white;
                     width:20px;height:20px;background:#5E3A3F;cursor:pointer;border-radius:50%;">
                    <i class="fa fa-close"></i>
                </div>
                <div id="modal-body">

                </div>
            </div>
        </div>

        <main role="main" class="pb-3" style="width:100%;">
            @RenderBody()
        </main>
    </div>
    <div id="loginContent" style="display:none;">
        @Html.Partial("~/Views/Security/_login.cshtml")
    </div>

    <div id="registerContent" style="display:none;">
        @Html.Partial("~/Views/Security/_register.cshtml")
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - KammalKada - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/Scripts/KammalKada.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
